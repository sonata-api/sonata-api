{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "paths": {
      "@sonata-api/api": [
        "../api/dist"
      ],
      "@sonata-api/api/*": [
        "../api/dist/*"
      ],
      "@sonata-api/access-control": [
        "../access-control/dist"
      ],
      "@sonata-api/common": [
        "../common/dist/cjs"
      ],
      "@sonata-api/entrypoint": [
        "../entrypoint/dist"
      ],
      "@sonata-api/types": [
        "../types/dist"
      ],
      "@sonata-api/validation": [
        "../validation/dist"
      ]
    }
  },
  "include": [
    "@types/*.d.ts",
    "src"
  ]
}

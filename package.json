{
  "name": "sonata-api-monorepo",
  "private": true,
  "scripts": {
    "build:all": "npx lerna exec -- \"npm run build\"",
    "postinstall": "for d in $(find node_modules/@sonata-api -mindepth 1); do r=$(realpath $d); unlink $d; cp -r $r $d; done"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/mocha": "^10.0.1",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}

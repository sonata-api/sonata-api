{
  "name": "sonata-api-monorepo",
  "private": true,
  "scripts": {
    "build:all": "npx lerna exec -- \"npm run build\"",
    "postinstall": "for d in $(find node_modules/@sonata-api -mindepth 1); do r=$(realpath $d); unlink $d; cp -r $r $d; done"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "lerna": "^7.1.5",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
